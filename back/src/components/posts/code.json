{
  "collectionName": "components_posts_codes",
  "info": {
    "displayName": "Code",
    "icon": "code",
    "description": ""
  },
  "options": {},
  "attributes": {
    "title": {
      "type": "string"
    },
    "showCopyButton": {
      "type": "boolean",
      "default": true
    },
    "code": {
      "type": "text"
    },
    "showLineNumbers": {
      "type": "boolean",
      "default": false
    },
    "highlightedLines": {
      "type": "string",
      "regex": "^ *\\d+ *(?:, *\\d+ *)*$"
    },
    "maxHeight": {
      "type": "integer",
      "min": 300
    },
    "syntax": {
      "type": "enumeration",
      "enum": [
        "JavaScript",
        "CSS",
        "HTML",
        "Shell"
      ]
    }
  }
}
