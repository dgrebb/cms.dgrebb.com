{
  "name": "backstop",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "approve": "backstop approve --config=backstop.config.js",
    "backstop": "backstop",
    "boot": "ENVIRONMENT='local' pm2 start",
    "dev": "nodemon ./scenarios/index.js",
    "mon": "pm2 monit",
    "pm2": "node ./node_modules/pm2/bin/pm2",
    "ref": "backstop reference --config=backstop.config.js",
    "remote": "backstop remote --config=backstop.config.js",
    "restart": "ENVIRONMENT='local' pm2 restart backstop && pm2 monit",
    "serve": "http-server ../../front/build -p 8080",
    "start": "ENVIRONMENT='local' pm2 start ecosystem.config.js && pm2 monit",
    "stop": "pm2 stop backstop && pm2 delete backstop && kill -9 $( lsof -i:3000 -t )",
    "test": "backstop test --config=backstop.config.js",
    "post-install": "patch-package"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "backstopjs": "github:dgrebb/BackstopJS#release/0.0.3",
    "cors": "^2.8.5",
    "http-server": "^14.1.1",
    "patch-package": "^8.0.0",
    "pm2": "^5.3.0",
    "puppeteer": "^20.7.4",
    "super-simple-web-server": "^1.1.4"
  }
}
