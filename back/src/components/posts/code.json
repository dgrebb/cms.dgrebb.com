{
  "collectionName": "components_posts_codes",
  "info": {
    "displayName": "Code",
    "icon": "code",
    "description": ""
  },
  "options": {},
  "attributes": {
    "title": {
      "type": "string"
    },
    "showCopyButton": {
      "type": "boolean",
      "default": true
    },
    "code": {
      "type": "text"
    },
    "showLineNumbers": {
      "type": "boolean",
      "default": false
    },
    "startingLineNumber": {
      "type": "integer"
    },
    "highlightedLines": {
      "type": "string",
      "regex": "^ *\\d+ *(?:, *\\d+ *)*$"
    },
    "syntax": {
      "type": "enumeration",
      "enum": ["JavaScript", "JSON", "CSS", "HTML", "Shell", "Svelte"]
    }
  }
}
